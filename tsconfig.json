{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "rootDir": "./src",
        "outDir": "./out",
        "sourceMap": true,
        "lib": [
            "ES6",
            "DOM"
        ],
        "strict": true,
        "composite": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*"
    ]
}
